    <Border
        Style="{StaticResource DashboardBorderStyle}">
        <Grid
            ColumnDefinitions="*, *, *, *"
            RowDefinitions="Auto, *, *"
            ColumnSpacing="12"
            RowSpacing="12"
            Margin="12">
            <Border
                Grid.ColumnSpan="4"
                Style="{StaticResource DashboardHeaderBorderStyle}">
                <Label 
                    Text=".NET MAUI Dev Tools"
                    Style="{StaticResource DashboardHeaderTextStyle}"/>
            </Border>
            <!-- PERF OVERLAY -->
            <Grid
                Grid.Row="1"
                RowDefinitions="*, Auto">
                <Grid.GestureRecognizers>
                    <TapGestureRecognizer 
                        Tapped="PerfOverlayTapped"/>
                </Grid.GestureRecognizers>
                <Border
                    Style="{StaticResource DashboardIconBorderStyle}">
                    <Path 
                        Data="{StaticResource PerfOverlayIcon}"/>
                </Border>
                <Label 
                    Grid.Row="1"
                    Text="Perf&#10;Overlay"
                    Style="{StaticResource DashboardTextStyle}"/>
            </Grid>
            <!-- DEBUG PAINT -->
            <Grid
                Grid.Row="1"
                Grid.Column="1"
                RowDefinitions="*, Auto">
                <Grid.GestureRecognizers>
                    <TapGestureRecognizer 
                        Tapped="DebugPaintTapped"/>
                </Grid.GestureRecognizers>
                <Border
                    Style="{StaticResource DashboardIconBorderStyle}">
                    <Path 
                        Data="{StaticResource DebugPaintIcon}"/>
                </Border>
                <Label 
                     Grid.Row="1"
                     Text="Debug&#10;Paint"
                     Style="{StaticResource DashboardTextStyle}"/>
            </Grid>
            <!-- DEBUG LOGS -->
            <Grid
                Grid.Row="1"
                Grid.Column="2"
                RowDefinitions="*, Auto"
                IsEnabled="False">
                <Border
                    Style="{StaticResource DashboardIconBorderStyle}"
                    Opacity="0.5">
                    <Path 
                        Data="{StaticResource DebugLogsIcon}"/>
                </Border>
                <Label 
                    Grid.Row="1"
                    Text="Debug&#10;Logs"
                    Style="{StaticResource DashboardTextStyle}"/>
            </Grid>
            <!-- DEVICE INFO -->
            <Grid
                Grid.Row="1"
                Grid.Column="3"
                RowDefinitions="*, Auto"
                IsEnabled="False">
                <Border
                    Style="{StaticResource DashboardIconBorderStyle}"
                    Opacity="0.5">
                    <Path 
                        Data="{StaticResource DeviceInfoIcon}"/>
                </Border>
                <Label 
                    Grid.Row="1"
                    Text="Device&#10;Info"
                    Style="{StaticResource DashboardTextStyle}"/>
            </Grid>
            <!-- COLOR PICKER -->
            <Grid
                Grid.Row="2"
                RowDefinitions="*, Auto"
                IsEnabled="False">
                <Border
                    Style="{StaticResource DashboardIconBorderStyle}"
                    Opacity="0.5">
                    <Path 
                        Data="{StaticResource ColorPickerIcon}"/>
                </Border>
                <Label 
                    Grid.Row="1"
                    Text="Color&#10;Picker"
                    Style="{StaticResource DashboardTextStyle}"/>
            </Grid>
        </Grid>
    </Border>
</toolkit:Popup>
